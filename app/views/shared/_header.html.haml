-# .btn-navbar is used as the toggle for when the responsive design gets narrow and the navbar goes away
%a.btn.btn-navbar{'data-target'=>".nav-collapse", 'data-toggle'=>"collapse"}
  .icon-bar
  .icon-bar
  .icon-bar
- if logged_in?
  = link_to home_path, :class => 'brand' do 
    #{configatron.community_name[0..2]}
    %span.am_brand #{configatron.community_name[3..6]}
- else
  = link_to home_path, :class => 'brand' do 
    #{configatron.community_name[0..2]}
    %span.am_brand #{configatron.community_name[3..6]}

-#= link_to configatron.community_name[3..6], home_path, :class => 'am_brand'
.nav-collapse
  %ul.nav
    -#= render 'categories/menu_item'
    - if logged_in?
      -# user group validation - if current_user.group == 0
      = render 'trip/menu_item'
      = render 'users/menu_item'
      = render 'static_pages/menu_item'
    - if @header_tabs.any?
      - for tab in @header_tabs
        %li= link_to "tab.name", "tab.url"
  %ul.nav.pull-right
    = render 'messages/menu_item'
    = render 'sessions/menu_item'