-@page_title = :editing_post.l

-widget :id => 'category_tips' do
  - if @post.category
    = render :partial => "categories/tips", :locals => {:category => @post.category}
  - else
    = render :partial => "categories/tips", :locals => {:category => nil}

%p
  =link_to :back.l, manage_user_posts_path(@post.user), :class => 'btn'
  =link_to :show.l, user_post_path(@post.user, @post), :class => 'btn'
  =link_to :delete.l, user_post_path(@post.user, @post), :method => 'delete', :confirm => :are_you_sure.l, :class => 'btn btn-danger'
        
= render 'form'
