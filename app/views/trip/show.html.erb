<div class="container">
	<h1>My recent Trips</h1>
	<% if @trips.blank? %>
		<p>No trips to display</p>
	<% else %>
		<%= paginate @trips %>
		<hr class="featurette-divider">
		<!--Loop through all the trips and printem-->
		<% for @trip in @trips do%>
			<div class="row well">
				<div class="span6">
					<div class="trip_info">
						<%= link_to image_tag("/assets/trips/#{@trip.id}.png"), "/trip/show/#{@trip.id}" %>
					</div>
				</div>
				<div class="span6">
					<div class="row">
						<%= link_to "#{@trip.getTripLength} Kilometers driven on #{@trip.created_at.strftime("%a, %d %B %Y")} at #{@trip.created_at.strftime("%H:%M %P")}", "/trip/show/#{@trip.id}" %>
					</div>
					<div class="row">
						<div class="span2">
							<h4 class="muted">DISTANCE</h4>
							<p><i class="icon-globe"> </i><%= @trip.getTripLength %> Km</p>
						</div>
						<div class="span2">
							<h4 class="muted">GAS CONSUMED</h4>
							<p><i class="icon-fire"> </i><%= @trip.getTripLength %> Litres</p>
						</div>
						<div class="span2">
							<h4 class="muted">CO2 EMISSIONS</h4>
							<p><i class="icon-leaf"></i> <%= @trip.getTripLength %> Grams</p>
						</div>			
					</div>
					<div class="row">
						<div class="span6">
							<% @trip.badges.each do |badge|%>
								<%= image_tag "Badges/#{badge[0].custom_fields[:image]}" %>
							<%end%>
						</div>	
					</div>	
				</div>
			</div>
			<hr class="featurette-divider">			
		<%end%>
	<%end%>	
</div> <!-- end container -->